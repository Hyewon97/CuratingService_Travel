<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="picture">

    <!-- 테마에 해당되는 사진 가져오기 -->
   <!-- mybatis에서 string은 알리아스로 제공하기에 parameterType="string"으로 써주면됨 -->
   <select id="selectinfo_theme" parameterType="string" resultType="dto.PictureDTO">
     SELECT p.pic_name, p.info_title 
     FROM picture p, information i
     WHERE p.info_title = i.info_title
     
     AND  i.info_theme = #{info_theme}
     AND p.pic_name like '%_1.%'
   </select>
   

</mapper>    